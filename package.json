{
  "name": "planner",
  "version": "0.1.0",
  "description": "Planner is a modern, minimalist calendar application built with Next.js and Electron.",
  "author": "Helmer Partanen <helmerpartanen3@gmail.com>",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:compile && concurrently -k \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && npm run electron:compile && electron-builder",
    "electron:start": "npm run electron:compile && electron ."
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0",
    "weather-react-icons": "^4.0.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.clarity.app",
    "productName": "Planner",
    "icon": "./public/favicon.ico",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "./public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "./public/favicon.ico"
    }
  }
}
